    </div>

    <div>
        <label for="CBO">CBO:</label>
        <input type="text" id="CBO" name="CBO" value="@Model.CBO" />
    </div>

    <div>
        <label for="DescricaoAtividades">Descrição das Atividades:</label>
        <textarea id="DescricaoAtividades" name="DescricaoAtividades">@Model.DescricaoAtividades</textarea>
    </div>

    <input type="submit" value="Salvar" />
    <input type="button" value="Excluir" onclick="deletarCargo()" />
